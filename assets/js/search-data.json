---
layout: null
sitemap: false
---

var store = [
    {%- for doc in site.pages -%}
      {
        "title": {{ doc.title | jsonify }},
        "excerpt":
          {{ doc.content | 
            replace:"</p>", " " | 
            replace:"</h1>", " " | 
            replace:"</h2>", " " |
            replace:"###", " " |
            replace:"##", " " |
          strip_html | strip_newlines | smartify | jsonify }},
        "url": {{ doc.url | absolute_url | jsonify }}
      } {%- unless forloop.last and l -%}, {%- endunless -%}
  {%- endfor -%}
]